<h1>Список статей</h1>
<table class="table table-bordered">
<tr>
  <td>Id</td>
  <td>Title</td>
   <td>Author</td>
   <td>Tags</td>
   <td></td>
</tr>
<% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.author.name %></td>
      <td>
        <% article.tags.each do |tag| %>
                <%=link_to tag.name, tag_articles_path(tag.id)%>
        <%end%>
      </td>
      <td><%= link_to "Просмотреть", article_path(article.id) %></td>
    </tr>
<% end %>
</table>